{
  "cleanUrls": true,
  "rewrites": [
    { "source": "/",        "destination": "/frontend/pages/index.html" },
    { "source": "/auth",    "destination": "/frontend/pages/auth.html" },
    { "source": "/admin",   "destination": "/frontend/pages/admin.html" },
    { "source": "/app",     "destination": "/frontend/pages/app.html" },

    { "source": "/login",   "destination": "/frontend/pages/login.html" },
    { "source": "/signup",  "destination": "/frontend/pages/signup.html" },

    { "source": "/js/:path*",     "destination": "/frontend/js/:path*" },
    { "source": "/public/:path*", "destination": "/frontend/public/:path*" }
  ]
}
